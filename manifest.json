{
  "name": "Better Twitter",
  "version": "2.1.0",
  "description": "Hide what's not important on Twitter.com",
  "manifest_version": 3,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": true
  },
  "icons": {
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "options.js",
        "prefs.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://twitter.com/*",
        "https://mobile.twitter.com/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "utils.js",
        "prefs.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "browser_style": true,
    "default_popup": "options.html"
  },
  "content_security_policy": {}
}